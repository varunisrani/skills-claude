# =============================================================================
# GitHub Repository Management App - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Node environment (development, production, test)
NODE_ENV=development

# Application URL
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application name
NEXT_PUBLIC_APP_NAME="GitHub Repo Manager"

# -----------------------------------------------------------------------------
# NextAuth.js Configuration
# -----------------------------------------------------------------------------

# NextAuth URL - must match your application URL
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL=http://localhost:3000

# NextAuth Secret - Generate with: openssl rand -base64 32
# IMPORTANT: Use a strong random string in production
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# Session max age (in seconds) - Default: 30 days
NEXTAUTH_SESSION_MAX_AGE=2592000

# -----------------------------------------------------------------------------
# GitHub OAuth Configuration
# -----------------------------------------------------------------------------
# Get these from: https://github.com/settings/developers
# Create a new OAuth App and copy the Client ID and Client Secret

# GitHub OAuth Client ID
GITHUB_CLIENT_ID=your-github-oauth-client-id

# GitHub OAuth Client Secret
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# GitHub OAuth Scopes (space-separated)
# Default scopes: repo user read:org workflow write:discussion
GITHUB_OAUTH_SCOPES="repo user read:org workflow write:discussion"

# GitHub API Base URL (usually no need to change)
GITHUB_API_URL=https://api.github.com

# GitHub API Version
GITHUB_API_VERSION=2022-11-28

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# PostgreSQL Database URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# Example: postgresql://postgres:password@localhost:5432/github_app?schema=public
#
# For Vercel Postgres: Get from Vercel dashboard
# For Supabase: Get from Supabase dashboard
# For local development: postgresql://postgres:postgres@localhost:5432/github_app
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/github_app?schema=public

# Prisma Studio Port (optional)
PRISMA_STUDIO_PORT=5555

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - for caching & rate limiting)
# -----------------------------------------------------------------------------

# Redis URL (optional, but recommended for production)
# Format: redis://[:password@]host:port/db
# Example: redis://localhost:6379/0
# For Upstash: Get from Upstash dashboard
REDIS_URL=

# Redis connection timeout (milliseconds)
REDIS_TIMEOUT=5000

# -----------------------------------------------------------------------------
# Email Configuration (Optional - for notifications)
# -----------------------------------------------------------------------------

# Email service provider (sendgrid, mailgun, smtp, etc.)
EMAIL_PROVIDER=

# SendGrid API Key (if using SendGrid)
SENDGRID_API_KEY=

# SMTP Configuration (if using custom SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME="GitHub Repo Manager"

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------

# Google Analytics Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Vercel Analytics (automatically enabled on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# -----------------------------------------------------------------------------
# Error Tracking (Optional)
# -----------------------------------------------------------------------------

# Sentry DSN (for error tracking)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Sentry Environment
SENTRY_ENVIRONMENT=development

# Sentry Auth Token (for source maps upload)
SENTRY_AUTH_TOKEN=

# Sentry Organization & Project
SENTRY_ORG=
SENTRY_PROJECT=

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------

# Enable/disable features
NEXT_PUBLIC_FEATURE_PR_MERGE=true
NEXT_PUBLIC_FEATURE_WEBHOOKS=false
NEXT_PUBLIC_FEATURE_ACTIONS=false
NEXT_PUBLIC_FEATURE_DISCUSSIONS=false

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------

# GitHub API rate limit buffer (requests to leave unused)
GITHUB_RATE_LIMIT_BUFFER=100

# API request timeout (milliseconds)
API_TIMEOUT=10000

# Maximum items per page
MAX_ITEMS_PER_PAGE=100

# Default items per page
DEFAULT_ITEMS_PER_PAGE=30

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Enable/disable API route protection
API_ROUTE_PROTECTION=true

# JWT Token expiry (for custom tokens, if needed)
JWT_EXPIRY=7d

# Encryption key for sensitive data (Generate with: openssl rand -hex 32)
ENCRYPTION_KEY=

# -----------------------------------------------------------------------------
# Storage Configuration (Optional - for file uploads)
# -----------------------------------------------------------------------------

# AWS S3 Configuration (if using S3 for storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Cloudinary Configuration (alternative to S3)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# -----------------------------------------------------------------------------
# Webhook Configuration (Optional)
# -----------------------------------------------------------------------------

# Webhook secret for verifying GitHub webhook signatures
GITHUB_WEBHOOK_SECRET=

# Webhook endpoint URL
WEBHOOK_URL=https://your-domain.com/api/webhooks

# -----------------------------------------------------------------------------
# Logging & Debugging
# -----------------------------------------------------------------------------

# Log level (error, warn, info, debug, trace)
LOG_LEVEL=info

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# -----------------------------------------------------------------------------
# Performance & Optimization
# -----------------------------------------------------------------------------

# Enable caching
ENABLE_CACHE=true

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600

# Enable request deduplication
ENABLE_DEDUP=true

# -----------------------------------------------------------------------------
# Development Tools (Development only)
# -----------------------------------------------------------------------------

# Enable React strict mode
NEXT_PUBLIC_STRICT_MODE=true

# Enable source maps in production
GENERATE_SOURCEMAP=false

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# -----------------------------------------------------------------------------
# Third-party Integrations (Optional)
# -----------------------------------------------------------------------------

# Slack Webhook URL (for notifications)
SLACK_WEBHOOK_URL=

# Discord Webhook URL (for notifications)
DISCORD_WEBHOOK_URL=

# Stripe API Key (if adding payment features)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# Testing Configuration (Test environment only)
# -----------------------------------------------------------------------------

# Test database URL
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/github_app_test?schema=public

# Test GitHub token (use a token with limited permissions)
TEST_GITHUB_TOKEN=

# Mock external services in tests
MOCK_EXTERNAL_SERVICES=true

# -----------------------------------------------------------------------------
# CI/CD Configuration
# -----------------------------------------------------------------------------

# Skip build step (for CI/CD optimization)
SKIP_BUILD_STATIC_GENERATION=false

# Skip environment variable validation (not recommended)
SKIP_ENV_VALIDATION=false

# =============================================================================
# IMPORTANT NOTES:
# =============================================================================
# 1. Copy this file to .env.local for local development
# 2. Never commit .env.local or any file containing actual secrets
# 3. For production, set these variables in your hosting platform
# 4. Rotate secrets regularly (especially NEXTAUTH_SECRET and API keys)
# 5. Use strong, random values for all secrets
# 6. Keep production and development secrets separate
# =============================================================================

# =============================================================================
# QUICK START CHECKLIST:
# =============================================================================
# [ ] Copy .env.example to .env.local
# [ ] Generate NEXTAUTH_SECRET: openssl rand -base64 32
# [ ] Create GitHub OAuth App at https://github.com/settings/developers
# [ ] Set GITHUB_CLIENT_ID and GITHUB_CLIENT_SECRET
# [ ] Set up PostgreSQL database and update DATABASE_URL
# [ ] Run: npx prisma db push
# [ ] Run: npm run dev
